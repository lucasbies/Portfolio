<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- SEO Meta Tags -->
    <meta name="description" content="{{#if meta.description}}{{meta.description}}{{else}}Lucas Bieszczad | Gameplay Programmer étudiant spécialisé en systèmes de combat et AI sur Unreal Engine 5. Portfolio projets C++/Blueprint.{{/if}}">
    <meta name="author" content="Lucas Bieszczad">
    <meta name="keywords" content="Lucas Bieszczad, Gameplay Programmer, Unreal Engine, C++, Unity, développeur jeux vidéo, BUT Informatique Graphique, systèmes de combat, AI, Blueprint">

    <!-- Open Graph (Facebook, LinkedIn) -->
    <meta property="og:title" content="{{#if meta.title}}{{meta.title}}{{else}}Lucas Bieszczad | Gameplay Programmer - Portfolio{{/if}}">
    <meta property="og:description" content="{{#if meta.description}}{{meta.description}}{{else}}Gameplay Programmer étudiant spécialisé en systèmes de combat et AI sur Unreal Engine 5.{{/if}}">
    <meta property="og:image" content="{{#if meta.image}}{{meta.image}}{{else}}https://lucasbies.github.io/Portfolio/assets/og-image.webp{{/if}}">
    <meta property="og:url" content="{{#if meta.url}}{{meta.url}}{{else}}https://lucasbies.github.io/Portfolio/{{/if}}">
    <meta property="og:type" content="{{#if meta.type}}{{meta.type}}{{else}}website{{/if}}">
    <meta property="og:locale" content="fr_FR">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{#if meta.title}}{{meta.title}}{{else}}Lucas Bieszczad | Gameplay Programmer{{/if}}">
    <meta name="twitter:description" content="{{#if meta.description}}{{meta.description}}{{else}}Gameplay Programmer étudiant spécialisé Unreal Engine 5 et C++.{{/if}}">
    <meta name="twitter:image" content="{{#if meta.image}}{{meta.image}}{{else}}https://lucasbies.github.io/Portfolio/assets/og-image.webp{{/if}}">

    <!-- Robots & Indexation -->
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="{{#if meta.url}}{{meta.url}}{{else}}https://lucasbies.github.io/Portfolio/{{/if}}">

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="assets/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="assets/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="assets/apple-touch-icon.png">
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico">
    <link rel="manifest" href="assets/site.webmanifest">
    <meta name="theme-color" content="#9050E0">

    <title>{{#if meta.title}}{{meta.title}}{{else}}Portfolio — Lucas Bieszczad{{/if}}</title>
    <style>
        /* CSS critique inline pour FCP */
        :root{--primary:#9050E0;--text-dark:#2C3E50;--bg-white:#fff}
        *{margin:0;padding:0;box-sizing:border-box}
        body{font-family:'Montserrat',sans-serif;background:#F0F0F0}
        .site-header{background:#fff;box-shadow:0 2px 12px rgba(0,0,0,.08);position:sticky;top:0;z-index:1000}
    </style>
    <link rel="preload" href="assets/style.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="assets/style.css"></noscript>
    <link rel="stylesheet" href="assets/style.css">
    <script defer src="assets/script.js"></script>
</head>
<body>
    {{> header }}
    {{{ body }}}
    {{> footer }}
</body>
</html>
